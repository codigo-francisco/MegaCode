<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".PerfilFragment">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="100dp"
            android:src="@drawable/background_game"
            android:id="@+id/cover_image"
            />

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:id="@+id/foto_perfil"
            android:src="@drawable/ic_outline_photo_camera_24px"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_view"
            android:layout_below="@id/foto_perfil"
            android:textAppearance="@style/Cabecera"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_view"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="5dp"
            android:id="@+id/text_age"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_below="@id/name_view"
            android:layout_alignEnd="@id/text_age"
            android:id="@+id/text_sex"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_age"
            android:id="@+id/text_seleccion"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:text="@string/seleccionar_personaje"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/button_megacode"
            android:layout_width="120dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:background="@drawable/borders"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/megacode"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:text="@string/megacode"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/button_shemegacode"
            android:layout_width="120dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@color/translucent"
            android:src="@drawable/she_megacode"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:text="@string/she_megacode"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/perfil_cerrarsesion"
            android:text="Cerrar Sesion"/>

    </RelativeLayout>

</ScrollView>
