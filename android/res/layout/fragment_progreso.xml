<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProgresoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabIndicatorHeight="3dp"
            app:tabSelectedTextColor="@color/md_white_1000"
            app:tabIndicatorColor="@color/md_white_1000"
            app:tabTextColor="@color/md_grey_500"
            app:tabTextAppearance="@style/TextAppearance.Design.Tab"
            app:tabBackground="@color/design_default_color_primary"
            style="@style/TabViewMaterial"
            android:id="@+id/tab_progreso"/>

        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tab_progreso"
            android:id="@+id/progreso_pager"
            />

    </RelativeLayout>

</FrameLayout>